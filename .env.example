# XenRay Environment Configuration
# Copy this file to .env and adjust values as needed

# Application Version
APP_VERSION=0.1.10-alpha

# GitHub Repository (for update checks)
GITHUB_REPO=xenups/xenray

# Update Checker Configuration
UPDATE_DOWNLOAD_TIMEOUT=60
UPDATE_MIN_FILE_SIZE=1048576

# Xray Core Version (Windows 7+ compatible)
# Find releases at: https://github.com/XTLS/Xray-core/releases
XRAY_VERSION=25.12.8

# Singbox Version (Windows 7+ compatible)
# Find releases at: https://github.com/SagerNet/sing-box/releases
SINGBOX_VERSION=1.12.14

# Architecture (32 or 64)
ARCH=64

# Build Configuration
PYINSTALLER_ONEFILE=false
INCLUDE_DEBUG_INFO=false

# Application Limits
MAX_RECENT_FILES=20

# Placeholder PIDs for process management
PLACEHOLDER_XRAY_PID=-999999
PLACEHOLDER_SINGBOX_PID=-999997

# Font URLs (for UI)
FONT_URL_ROBOTO=https://github.com/google/fonts/raw/main/apache/roboto/Roboto-Regular.ttf
FONT_URL_ROBOTO_BOLD=https://github.com/google/fonts/raw/main/apache/roboto/Roboto-Bold.ttf

# DNS Configuration
DNS_LOCAL_SERVER=8.8.8.8
DNS_REMOTE_SERVER=1.1.1.1
DNS_BYPASS_LIST=8.8.8.8,8.8.4.4,1.1.1.1,1.0.0.1,dns.google,cloudflare-dns.com

# Singbox Rule Set URLs
SINGBOX_RULESET_IR_GEOIP=https://raw.githubusercontent.com/Chocolate4U/Iran-sing-box-rules/rule-set/geoip-ir.srs
SINGBOX_RULESET_IR_GEOSITE=https://raw.githubusercontent.com/Chocolate4U/Iran-sing-box-rules/rule-set/geosite-ir.srs
SINGBOX_RULESET_CN_GEOSITE=https://raw.githubusercontent.com/SagerNet/sing-geosite/rule-set/geosite-cn.srs
SINGBOX_RULESET_CN_GEOIP=https://raw.githubusercontent.com/SagerNet/sing-geoip/rule-set/geoip-cn.srs
SINGBOX_RULESET_RU=https://github.com/legiz-ru/sb-rule-sets/raw/main/ru-bundle.srs